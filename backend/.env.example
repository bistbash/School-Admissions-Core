# JWT Secret - REQUIRED for authentication
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-secret-key-here

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database Seed Configuration (Optional)
# These values are used when running `npm run seed` to create the initial admin user
# If not set, default values will be used

# Admin User Configuration
ADMIN_EMAIL=admin@school.local
ADMIN_PASSWORD=Admin123!@#
ADMIN_NAME=System Administrator
ADMIN_PERSONAL_NUMBER=000000000

# Default Department and Role Names (Optional)
# If not set, admin user will be created without department/role
# Admin can add these later through the system interface
# DEFAULT_DEPARTMENT_NAME=מנהלה
# DEFAULT_ROLE_NAME=מנהל מערכת

# Auto-seed on server startup (development only)
# Set to 'true' to automatically seed database if empty when server starts
AUTO_SEED=false

# Logging
LOG_LEVEL=debug
